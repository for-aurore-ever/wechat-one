/*右边切换模式框*/
.changes {
  width: 200rpx;
  line-height: 80rpx;
  font-size: 24rpx;
}

/*文字切换模式*/
.Continer .change {
  color: #7c0000;
  /* margin-bottom:20rpx;  */
