}

/*头部导航框*/
.Continer {
  display: flex;
  justify-content: space-between;
  margin-top: 4rpx;
  background-color: #fff;
  height: 100rpx;
}

/*下面主体区*/
.body {
  display: flex;
}

/*一份成产报告框*/
.one {
  position: relative;
  padding-bottom: 40rpx;
}

/*第一份成长报告的圆点/制作中的成长报告的圆点*/
.onedotActive {
  left: -2rpx;
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  background-color: #7C0000;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
}

/*完成的成长报告的圆点*/
.onedotNoActive {
  /* left: -2rpx; */
  left: 0;
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  background-color: #999999;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
}

/*虚线*/
.oneline {
  position: absolute;
  /* left: 8rpx; */
  left: 12rpx;
  height: 100%;
  border-left: 2px dashed #c8c8c8;
}

/*第二份成长报告*/
.onemain {
  position: relative;
  padding-left: 56rpx;
  top: -6rpx;
  justify-content: space-between
}

/*学期*/
.onemaintitle {
  margin-bottom: 16rpx;
  padding-top: 8rpx;
  color: #101010;
  line-height: 1;
  font-size: 28rpx;
  font-weight: 545;
  float: left;
}

/*第二份成长报告框*/
.onemaincon {
  color: #303133;
  margin-bottom: 40rpx;
}

