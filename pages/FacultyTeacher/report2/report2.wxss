.catemenu {
  width: 220rpx;
  /* height: 100vh; */
  height: calc(100vh - 110rpx);
  overflow-y: auto;
  background-color: #F7F8FA;
  position: absolute;
  left: 0px;
  /* top: 0px; */
  top: 110rpx;
  z-index: 1;
  /* border-top: 1px solid #f0f0f0; */
}

.catemenu .item {
  font-size: 24rpx;
  color: #666666;
  line-height: 80rpx;
  font-weight: bold;
  text-align: center;
  border-left: 8rpx solid transparent;
}

.catemenu .item.active {
  background-color: #fff !important;
  border-left: 8rpx solid #7C0000;
}

/* 右边菜列表 */
.reports_wrap {
  /* height: 100vh; */
  height: calc(100vh - 110rpx);
  /* padding-left: 220rpx; */
  margin-left: 250rpx;
  background-color: white;
  box-sizing: border-box;
}

.reports_wrap .category_title {
  font-size: 30rpx;
  line-height: 2em;
  background-color: #f9f9f9;
  padding: 0rpx 10rpx;
}

.reports_wrap .cate {
  background-color: #fff;
  display: flex;
  align-items: flex-start;
  /* padding: 30rpx 12rpx; */
  padding: 0 12rpx;
  /* border-bottom: 1px solid #eee; */
}


.reports_wrap .cate .info {
  flex: 1;
  margin-left: 20rpx;
  position: relative;
}

.reports_wrap .cate .info .title {
  color: #333;
  font-size: 32rpx;
}