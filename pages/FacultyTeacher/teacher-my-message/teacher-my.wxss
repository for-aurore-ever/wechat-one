page{
  background-color: #f7f8fa;
  height: 100%;
}
/* 信息的top区域  */
.topMessage{
  margin-top: 6rpx;

}
/*信息的top区域里的头部(头像)  */
.topMessage .header{
  justify-content: space-between;
  margin-top: 6rpx;
  display: flex;
  width: 100%;
  height: 80rpx;
 background-color:#fff;
 line-height:80rpx ;
}
/*信息的top区域里的头部(头像) 文字 */
.topMessage .header .text{
  padding-left: 30rpx;
   float: right;
 }
/*信息的top区域里的头部(头像) 图片  */
.topMessage .header image{
  margin-top: 10rpx;
  line-height: 60rpx;
  height: 60rpx;
  width: 60rpx;
  margin-bottom: 6rpx;
  /* margin-right: 80rpx; */
  /* margin-right: 10rpx; */
  
}
/* 信息的top区域里的头部(姓名) */
.nameTop{
  justify-content: space-between;
  margin-top: 6rpx;
  display: flex;
  width: 100%;
  height: 90rpx;
  background-color:#fff;
  line-height:90rpx ;
}
/* 信息的top区域里的头部(姓名) 文字*/
.nameTop .text{
    padding-left: 30rpx;
     float: right;
} 
/* 按钮 */
.confirm-btn{
  width: 540rpx!important;
  height: 76rpx; 
  line-height: 76rpx; 
  border-radius: 50rpx; 
  margin-top:500rpx ;
  border: 2rpx solid #9b4f51;
  color: #7f1c1e;
  font-size: 28rpx; 
  font-weight: 380;
  padding: 0;
}
/* 右边的文字区域 */
.name{
  margin-right: 30rpx;
  color: #999999;
  font-size: 28rpx;
}
/* 图标 */
.icon{
  color: #999999;
  font-size: 28rpx;
  margin-right:20rpx ;
}

.btn{
  height: 80rpx;
  margin-top:350rpx;
  background-color:#fff;
  font-size:28rpx;
  font-weight:400;
  color:#7C0000;
  border-radius: 50rpx;
  border: 2rpx solid #7C0000;
}