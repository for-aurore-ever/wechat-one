/* 蒙层 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}
/* 弹框 */
.modalDlg{
width: 650rpx;
height: 350rpx;
position: fixed;
top: 50%;
left: 0;
z-index: 9999;
margin: -180rpx 50rpx;
background-color: #fff;
border-radius: 25rpx;
display: flex;
flex-direction: column;
align-items: center;
}

/* 弹框头部盒子 */
.tip_title{
  width: 650rpx;
  height: 60rpx;
}
/*弹窗头部内容  */
.tip_title .text{
  margin: 0 260rpx;
}
/* 弹窗中间盒子 */
.tip_content{
  width: 100%;
  font-size: 30rpx;
  color: rgb(163, 163, 163);
}
/* 弹窗中间input框 */
.tip_content input{
  width: 550rpx;
  margin-left: 50rpx;
  margin-top: 15rpx;
  border: 2rpx solid #7b7c7d;
  height: 70rpx;
  border-radius: 10rpx;
} 
