/*底部下拉弹窗 */
/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 40%;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
 background-color: rgba(255, 255, 255, 1);
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}


/* 下拉弹框的选择头部 */
.selectTop{
  width: 100%;
  height: 80rpx;
  background: #fff;
  text-align: center;
  z-index: 100;
  position: fixed;
  display: flex;
  justify-content: space-between;
  border-radius: 20rpx 20rpx 0 0;
  bottom: 400rpx;
}
/* 下拉弹框的选择头部的左文字区域 */
.topLeft{
  color:#999999 ;
  font-size: 24rpx;
  line-height: 80rpx;
  margin-left: 40rpx;
}
/* 下拉弹框的选择头部的中间文字区域 */
.topCenter{
  font-size:32rpx ;
  line-height: 80rpx;
}
/* 下拉弹框的选择头部的右文字区域 */
.topRight{
  color: #811C1D;
  font-size: 24rpx;
  line-height: 80rpx;
  margin-right: 40rpx;
}
/* 下拉弹框的选择滑动区域 */
scroll-view {
  width: 100%;
  height: 400rpx;
  background: #fff;
  text-align: center;
  position: fixed;
  bottom: 0;
  z-index: 100;
}

