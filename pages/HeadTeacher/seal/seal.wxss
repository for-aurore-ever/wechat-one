/* pages/FacultyTeacher/seal/seal.wxss */
/* 印章页面样式 */
page{
  background-color:#f7f8fa
}
.seal{
  margin-top: 20rpx;
}
/*信息条样式*/
.seal .personalSeal{
  display: flex;
  height:60rpx;
  font-size:32rpx;
  justify-content:space-between; /*使页面的>符移到右边*/
  padding: 20rpx 20rpx;
  background-color: #fff;
  margin: 10rpx 0rpx;
  line-height: 60rpx
}

/*请上传样式*/
.seal .personalSeal .upload{
  /* margin-bottom:20rpx;  */
  /*padding-bottom: 10rpx;*/
  color: #8a8a8a;
  font-size:28rpx;
  line-height: 60rpx; 
}

/*进入箭头图标样式*/
.icon{
  /* margin-top: 20rpx; */
  line-height: 60rpx;
}

/*在右边包含请上传样式和进入箭头的图标盒子*/
.right{
  height:60rpx
}

/*包含两个按钮*/
.btn{
  display:flex;
  /* width: 500rpx; */
  width:610rpx;
  padding:0 70rpx;
}

/*新增点击按钮*/
.newAdd{
  /* height: 100rpx; */
  width: 300rpx!important ;
  margin-top:150rpx;
  background-color:#7c0000;
  color:white;
  font-size:30rpx;
  font-weight:400;
  padding:0;
  text-align: center; /*让文字居中*/
  line-height: 76rpx; /*设置行高*/
  border-radius: 50rpx 0 0 50rpx;
}

/*确定按钮*/
.define{
  width: 300rpx!important ;
  margin-top:150rpx;
  background-color:#7c0000;
  color:white;
  font-size:30rpx;
  font-weight:400;
  padding:0;
  text-align: center; /*让文字居中*/
  line-height: 76rpx; /*设置行高*/
  border-radius: 0 50rpx 50rpx 0;
}

/* 弹框 */
 .mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}
 
.modalDlg{
width: 650rpx;
height: 350rpx;
position: fixed;
top: 50%;
left: 0;
z-index: 9999;
margin: -180rpx 55rpx;
background-color: #fff;
border-radius: 25rpx;
display: flex;
flex-direction: column;
align-items: center;
}
.theme{
  font-size: 35rpx;
  margin-top: 10px;
}
input {
border: 1px solid rgba(102, 102, 102, 1);
font-size: 29rpx;
font-weight: bold;
color: rgba(211, 211, 211, 1);
border-radius: 10rpx;
height: 79rpx;
width: 550rpx;
margin-top: 40rpx;
}
.place{
  margin-left: 30rpx;
  color: rgba(211, 211, 211, 1);
}
.confirm{
 display: flex;
width: 600rpx;
margin-top: 40rpx;

}
.confirm .yes{
 height: 90rpx;
text-align: center;
width: 220rpx !important;
background-color: rgba(124, 0, 0, 1);
border: 1px solid rgba(187, 187, 187, 1);
color: rgba(255, 255, 255, 1);
border-radius: 10rpx;
font-size: 35rpx;
}
.confirm .no{
height: 90rpx;
text-align: center;
