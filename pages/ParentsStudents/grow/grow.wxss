/* pages/mind/mind.wxss */
.Countainer{
  display: flex;
  flex-wrap: wrap;
  height: 100%;
   border: 2rpx solid rgba(245, 245, 245, 1);
}
.background{
  /* 给父元素开启绝对定位居中 */
   position: relative;
}
.btn1{
  width: 500rpx!important;
  height: 60rpx; 
  border: 50%;
  background: #7a0002;
  color: #fff;
  line-height: 30rpx;
}
.photo{
  position: absolute;
  z-index: 2;
  height: 680rpx;
  width: 520rpx;
  background-color: rgba(247, 248, 250, 1);
   border: 1px solid rgba(124, 0, 0, 1);
   border-style: dashed;
  left:0;top:0;right:0;
  margin:auto;/*有了这个就自动居中了*/
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 170rpx;
}
.background image{
  display: flex;
  height: 1000rpx;
  padding: 30rpx 30rpx;
  width: 700rpx;
}
/* 上传的图片 */
.img image{
   height: 680rpx !important;
   width: 520rpx !important;
}
