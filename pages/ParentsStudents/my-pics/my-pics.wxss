/* pages/my-kids/my-kids.wxss */
page{
  background-color: #f7f8fa;
  position: relative;
  height: 100%;
}
.myKidsContainer{
  margin-top: 20rpx;
  width: 100%;
  height: 100%;
}
.pics{
  width: 100%;
  height: 240rpx;
  background-color: #ffffff;
  margin-bottom: 8rpx;
  display: flex;
}
.pics image{
  width: 180rpx;
  height: 180rpx;
  margin-top: 30rpx;
  margin-left: 40rpx;
  border-radius: 15rpx;
}
.imageContainer{
  width: 30%;
  height: 100%;
}
.nameTimeContainer{
  width: 70%;
}
.nameContainer{
  margin-top: 70rpx;
  display: flex;
  width:85%;
  height: 40%;
  margin-left: 40rpx;
  justify-content: space-between;
  font-size: 30rpx;
}
.timeContainer{
  margin-left: 40rpx;
  color: #a69999;
  font-size: 28rpx;
  margin-top: -30rpx;
}
.btnContainer{
  width: 100%;
  height: 100%;
  overflow:hidden;
  zoom:100%;
}
.confirm-btn{
  width: 540rpx!important;
  height: 76rpx; 
  line-height: 76rpx; 
  border-radius: 50rpx; 
 margin-top: 300rpx;
  background: #7a0002;
  color: #fff;
  padding: 0;
  font-size: 30rpx;
  font-weight: 400; 
  text-align: center;
}
