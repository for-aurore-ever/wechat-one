/* pages/my-message/my-message.wxss */
page{
  background-color: #f7f8fa;
  height: 100%;
}
.messageComtainer{
  height: 100%;
  margin-top:6rpx;
}
/*信息框包括头像和姓名*/
.topMessage{
  margin-top: 6rpx;
}
/*头像信息条*/
.header{
  justify-content: space-between;
  /* margin-top: 20rpx; */
  display: flex;
  width: 100%;
  height: 90rpx;
 background-color:#fff;
 line-height:90rpx ;
}
/*头像图片*/
.header image{
  margin-top: 10rpx;
  line-height: 90rpx;
  height: 64rpx;
  width: 64rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
  background-color: #E4EEFA;
  /* margin-right: 80rpx; */
  /* margin-right: 10rpx; */
}
/*左边文字*/
.header .text{
 padding-left: 30rpx;
  float: right;
  font-size:32rpx;
}
/*姓名信息条*/
.nameTop{
  justify-content: space-between;
  margin-top: 6rpx;
  display: flex;
  width: 100%;
  height: 90rpx;
  background-color:#fff;
  line-height:90rpx ;
}
/*文字姓名*/
.nameTop .text{
    padding-left: 30rpx;
     float: right;
}
/*文字张三*/
.name{
  padding-right: 40rpx;
  color: #999999;
  font-size: 30rpx;
}
/*右边手机号*/
.number{
  color: #999999;
  font-size: 28rpx;
  margin-right: 32rpx;
}
/*右边图标*/
.icon{
  color: #999999;
  font-size: 28rpx;
  margin-right:20rpx ;
}
/*anniu*/
.btn{
  height: 80rpx;
  margin-top:762rpx;
  background-color:#fff;
  font-size:28rpx;
  font-weight:400;
  color:#7C0000;
  border-radius: 50rpx;
  border: 2rpx solid #7C0000;
}