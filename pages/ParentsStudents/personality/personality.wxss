/* pages/personality/personality.wxss */
page{
  background-color: rgba(247, 248, 250, 1);
}
.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  height: 20rpx;
  background-color: rgba(255, 255, 255, 1);
  margin-top: 20rpx;
}
.content{
  height: 500rpx;
  background-color: rgba(255, 255, 255, 1);
  margin-top: 8rpx;
}
.photo{
  display: flex;
  height: 100rpx;
  align-items: center;
  margin-left: 40rpx;
}
.photoCountainer{
  position: relative;
  height:300rpx;
  width: 300rpx;
   background-color: rgba(247, 248, 250, 1);
   border: 1px solid rgba(124, 0, 0, 1);
   border-style: dashed;
   margin-left: 40rpx;
   display: flex;
   flex-wrap: wrap;
}
.photovideo{
  height:300rpx;
  width: 300rpx;
   display: flex;
   flex-wrap: wrap;
}
.img image{
  height: 300rpx !important;
  width: 300rpx !important;
}
/* 删除图片按钮 */
.icon-cuowuguanbiquxiao{
  position:absolute;
  top:0;right:0;
  display: flex;
  width: 50rpx;
 height: 50rpx;
 align-items: center;
 justify-content: center;
 font-size: 40rpx;
 color: rgba(255, 255, 255, 1);
 background-color:darkgray;
}
.add{
  width: 300rpx;
  height: 50rpx;
  text-align: center;
  margin-top: 50rpx;
  font-size: 100rpx;
  color: rgba(124, 0, 0, 1);

}
.title{
  width: 300rpx;
  height: 100rpx;
   text-align: center;
   margin-top: 20rpx;
   font-size: 35rpx;
   color: rgba(124, 0, 0, 1);
}
.name{
  font-size: 33rpx;
  color: rgba(153, 153, 153, 1);
}

/* 按钮盒子 */
.btnContainer{
  display: flex;
  width:620rpx;
  margin-left: 65rpx;
  margin-top: 350rpx;
}
/* 按钮1 */
.confirm-btn1{
  width: 300rpx!important;
  height: 90rpx; 
  line-height: 80rpx; 
  border-radius: 50rpx 0 0 50rpx; 
  background: #7a0002;
  color: #fff;
  padding: 0;
  font-size: 38rpx;
  font-weight: bold;
}
