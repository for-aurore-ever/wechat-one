.one {
  position: relative;
  padding-bottom: 40rpx;
}
/*第一份成长报告的圆点/制作中的成长报告的圆点*/
.onedotActive {
  left: -2rpx;
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  background-color: #7C0000;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
}
/*第二份完成的成长报告的圆点*/
.onedotNoActive{
  left: -2rpx;
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  background-color: #999999;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
}
/*虚线*/
.oneline {
